import os,sys
import json
BASE_DIR = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
sys.path.append(BASE_DIR)
def add_goods():
    with open ('../database/goods.json','w+',encoding = 'UTF-8') as f:
        good = input('Please enter good:')
        price = int(input('Plese enter price:'))
        g = [('水果',30),('computer',7000)]
        g.append((good,price)
        f.write('11111')
        print('add goods success!')
        print (f)
add_goods()
 
def shopping():
    with open ('../database/goods.json','r+',encoding = 'UTF-8') as f:
        goods = json.load(f)
        #for i in len(goods):
        #    print ('id:'+(i+1)+' '+goods[i][0]+' '+goods[i][1])
        print(goods)    
shopping()