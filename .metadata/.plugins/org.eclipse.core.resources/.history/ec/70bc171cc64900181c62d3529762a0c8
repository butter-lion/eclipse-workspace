import os,sys
import json

BASE_DIR = os.path.dirname(os.path.dirname(os.path.abspath(__file__)))
sys.path.append(BASE_DIR)

with open ('../database/goods.json','r+',encoding = 'UTF-8') as f:
    goods = [('computer',4000),('iphone',7000),('水杯',40),('book',30),('bag',100),('water',20),('table',400)]
    f.write(json.dumps(goods))
    a = json.load(f,goods)
    print(a)